---
import { getCollection } from "astro:content";
import Layout from "../../layouts/HomeLayout.astro";
import PostRow from "../../components/PostRow.astro";
import BackButton from "../../components/BackButton.astro";
import ProjectList from "../../components/ProjectList.astro";

const posts = (await getCollection("projects"))?.sort(
  (blogEntryA, blogEntryB) =>
    (blogEntryB.data.pubDate || new Date()).getTime() -
    (blogEntryA.data.pubDate || new Date()).getTime()
);
---

<Layout title="dayangrah.am - Project Blog" description="Project Blog">
  <main
    class="w-full h-screen flex flex-col justify-start items-start max-w-3xl mx-auto p-8"
  >
    <BackButton />
    <h1 class="text-4xl font-bold mb-4 text-neutral-100 font-mono">Posts</h1>
    <ProjectList posts={posts} />
  </main>
</Layout>
